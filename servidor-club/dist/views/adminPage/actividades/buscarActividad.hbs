{{>headerAdmin}}
<link rel="stylesheet" href="/css/AdminCss/buscarSocio.css">


<form action="#" method="POST">
    <div>
        <h4>Filtros</h4>
        <input type="number" placeholder="Numero Socio">
        <input type="text" placeholder="Nombre">
        <input type="text" placeholder="Apellido">
        <input type="number" placeholder="DNI">
        <br>
        <br>
        <button>Filtrar</button>
    </div>
</form>


<br>
<br>


<table border="1">
    <theader>
        <th>Numero</th>
        <th>Descripcion</th>
        <th>Acciones</th>
    </theader>
    
    {{#each acts}}
    <tr>
        <form action="./modificarActividad/{{Id_Actividad}}" method="post">
            <td><input type="text" name="Id_Actividad" value="{{Id_Actividad}}" readonly></td>
            <td><input type="text" name="Descripcion_Actividad" value="{{Descripcion_Actividad}}"></td>
            <td>
            <button>Modificar</button>
            <a href="/admin/eliminarActividad/{{Id_Actividad}}">Eliminar</a>
            </td>
        </form>
    </tr>
    {{else}}

    <tr>
        <td colspan="4">No hay mas filas</td>
    </tr>

    {{/each}}
</table>